# Hugging Face Configuration
HUGGINGFACE_TOKEN=create_your_huggingface_token
HUGGINGFACE_EMBEDDINGS_MODEL=choose_your_huggingface_embeddings_model
HUGGINGFACE_CHAT_MODEL=choose_your_huggingface_chat_model

# Server Configuration
HOST=localhost
PORT=8001
DEBUG=false

# API Configuration
API_PREFIX=/api
API_VERSION=v1

# Document Configuration
DATA_DIRECTORY=data
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.docx,.txt

# Text Processing Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=20
MAX_TOKENS=150

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=domain-chatbot-backend.log

# CORS Configuration (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
